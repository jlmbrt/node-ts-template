{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2016",
        "module": "commonjs",

        "allowJs": true,
        "outDir": "./build",
        "rootDir": "./src",

        "strict": true,

        "esModuleInterop": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "inlineSourceMap": true,
        "removeComments": true,

        "baseUrl": "src",
        "paths": {
            "@core/*": ["core/*"]
        },

        "plugins": [{ "transform": "typescript-transform-paths" }]
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/__tests__/*"]
}
